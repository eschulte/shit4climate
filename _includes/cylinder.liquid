/* -*- mode:css -*- */

.cylinder {
	position: absolute;
        right: 0;
        z-index: 3;
	overflow: hidden;
	margin: 0 auto;
	width: 125px;
	height: 300px;
	border-radius: 30px/20px;
	background-color: #eee;
        border: gray solid 4px;
}

.cylinder:before {
	position: absolute;
	left: 0;
	top: 0;
	width: 125px;
	height: 30px;
	border-radius: 30px/20px;
	/* background-color: rgba(160, 160, 160, 0.2); */
        background-color: #94751f;
	content: '';
}

.cylinder:after {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 125px;
	height: 30px;
	border-radius: 30px/20px;
	background-color: #eee;
	content: '';
}

@media (max-width:360px){
    .cylinder {
	width: 125px;
	border-radius: 30px/20px;
    }
    .cylinder:before {
	width: 125px;
	border-radius: 30px/20px;
    }
    .cylinder:after {
	width: 125px;
	border-radius: 30px/20px;
    }
}
