/* -*- mode:css -*- */

.cylinder {
	position: absolute;
        right: 0;
        z-index: 3;
	overflow: hidden;
	margin: 0 auto;
	width: 150px;
	height: 300px;
	border-radius: 50px/25px;
	background-color: #eee;
        border: gray solid 4px;
}

.cylinder:before {
	position: absolute;
	left: 0;
	top: 0;
	width: 150px;
	height: 50px;
	border-radius: 50px/25px;
	/* background-color: rgba(160, 160, 160, 0.2); */
        background-color: #94751f;
	content: '';
}

.cylinder:after {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 150px;
	height: 50px;
	border-radius: 50px/25px;
	background-color: #eee;
	content: '';
}
