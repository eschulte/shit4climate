body{
    background-image: linear-gradient(skyblue, skyblue, black);
    background-repeat: no-repeat;
}

a[href^="tel:"]:before {
    content: "\260E";
    /* content: "\1F4F1"; */
    /* content: "\1F4DE"; */
    margin-right: 10px;
}

a[href^="tel:"]{
    margin-left: 1em;
}

a[href^="mailto:"]:before {
    /* content: "\1F4E7;" email letter */
    content: "\2709";
    margin-right: 10px;
}

a[href^="mailto:"]{
    margin-left: 1em;
}

a.external:before {
    /* content: "\F08E"; */
    /* content: "\1F4DD"; pencil and paper */
    /* content: "\1F4CB"; clip board */
    content: "\270E";
    margin-right: 10px;
}

a.external {
    margin-left: 1em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
}

a.denier {
    color: red;
    text-decoration: none;
    border: 2px red solid;
    border-radius: 6px;
}

a.denier:hover{
    text-decoration: underline;
}

div#contact > a {
    margin-left: 0;
    display:inline;
}

span.dirty {
    font-weight: bolder;
    font-size: large;
    color: red;
}

body.s4c-fill, html.s4c-fill {
    min-height: max(100vh, 1000px);
}

.footnotes {
    color: white;
}

blockquote {
    border-left: wheat solid;
    padding: 0.5em;
}

.s4c-blue {
    background-color: skyblue;
    filter: brightness(0.75);
}

.s4c-top-button {
    position: absolute;
    margin: 0.5em;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 12.5px;
}

.s4c-top-button > a {
    text-decoration: none;
}

/* From: https://css-tricks.com/css-only-carousel/ */
.slider {
  position:relative;
  margin: auto;
  overflow: hidden;
  border-radius: 0 80px 80px 0;
}
@media (max-width:360px){
    .slider {
        width: 100%;
  }
}
@media (min-width:360px){
    .slider {
        width: 100%;
    }
}

.slides {
  display: flex;
  
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;

  scrollbar-color: black;
  scrollbar-width: 10px;

  border-radius: 0 80px 80px 0;

  /*
  scroll-snap-points-x: repeat(300px);
  scroll-snap-type: mandatory;
  */
}
.slides::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}
.slides::-webkit-scrollbar-thumb {
  background: black;
  border-radius: 10px;
}
.slides::-webkit-scrollbar-track {
  background: transparent;
}
.slides::scrollbar {
  width: 10px;
  height: 10px;
}
.slides::scrollbar-thumb {
  background: black;
  border-radius: 10px;
}
.slides::scrollbar-track {
  background: transparent;
}
.slides > a > div {
  scroll-snap-align: start;
  flex-shrink: 0;
  /* width: 300px; */
  border: gray solid 4px;
  height: 300px;
  margin-right: 0;
  border-radius: 10px;
  background: #eee;
  transform-origin: center;
  transform: scale(1);
  transition: transform 0.5s;
  position: relative;
  padding-left: 0.25em;

  display: flex;
  align-items: center;
  /* font-size: 100px; */
}
.slides > a > div > h3 {
    text-decoration: underline;
}
@media screen and (max-width:360px){
    .slides > a > div {
        width: 270px;
    }
    .slides > a > div.last {
        width: 135px;
    }
}
@media screen and (min-width:360px){
    .slides > a > div {
        width: 300px;
    }
    .slides > a > div.last {
        width: 150px;
    }
}

@media screen and (max-width: 379px) {
    .slides > a > div {
        font-size: smaller;
        padding-right: 5em;
    }
}
@media screen and (min-width: 380px) and (max-width: 450px) {
    .slides > a > div {
        font-size: small;
        padding-right: 2em;
    }
}
@media screen and (min-width: 451px) and (max-width: 768px) {
    .slides > a > div {
        font-size: small;
        padding-right: 0;
    }
}
@media screen and (min-width: 769px) {
    .slides > a > div {
        padding-right: 0;
    }
}

.slider > a {
  display: inline-flex;
  width: 1.5rem;
  height: 1.5rem;
  background: white;
  text-decoration: none;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin: 0 0 0.5rem 0;
  position: relative;
}
.slider > a:active {
  top: 1px;
}
.slider > a:focus {
  background: #000;
}

.slider > div > a {
    text-decoration: none;
}
.slider > div > a:hover {
    /* text-decoration: underline; */
    filter: brightness(0.85);
}

@supports (scroll-snap-type) {
  .slider > a {
    display: none;
  }
}

/* Ensure the contents of this element don't extend beyond it's
 * borders.  This is used to keep clouds from showing off screen,
 * which (when it happens) can cause phone scrolls to leave the body
 * uncentered in the phone screen.
 */
.s4c-keep-contained{
    position:absolute;
    width:100%;
    height:1000px;
    overflow:hidden;
}

.tp {
    position: relative;
    width: calc(min(800px, 85%) - 20px);
    min-height: 140vh;
    margin-top: 1em;
    margin-left: calc(50% - min(400px, 42.5%));
    padding:1em;
    padding-bottom:125px;

    background: white;
    border-radius: 0 0 20px 20px;
    background-image: repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        #fff 2px,
        #fff 6px
    ), repeating-linear-gradient(
        transparent,
        transparent min(800px, 85vw),
        #888 min(800px, 85vw),
        #888 calc(min(800px, 85vw) + 3px)
    );
}

/* From: https://www.py4u.net/discuss/1021347 */
.tp:before, .tp:after {
    content:'';
    width:100%;
    height:5px;
    position:absolute;
    bottom:100%;
    left:0;
    background-image: linear-gradient(135deg, transparent 66%, white 67%),
                      linear-gradient(45deg, white 33%, gray 34%, transparent 44%);
    background-position: -5px 0;
    background-size: 10px 100%;
    background-repeat:repeat-x;
}

@media (max-width:424px) {
    div.tp > h1 {
        font-size: 24px;
    }
}

