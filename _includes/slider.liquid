<!-- -*- mode:mhtml -*- -->
<div class="slider">
<div class="cylinder"></div>
<div class="slides">
{% assign index = 0 %}
{% assign roll_size = roll | size %}
{% assign sorted = roll | reverse | sortByOrder %}
{% for piece in sorted %}
<a href="{{ piece.url| url }}">
{% if index == 0 %}
<div id="slide-{{ index }}" class="w3-container first">
{% else %}
<div id="slide-{{ index }}" class="w3-container">
{% endif %}
<h3>{{ piece.data.title }}</h3>
<p class="w3-margin">{{ piece.data.brief|safe }}</p>
</div>
</a>
{% assign index = index| plus: 1 %}
{% if index >= roll_size %}
<a href="#">
<div id="slide-{{ index }}" class="w3-container last">
</div>
</a>
{% endif %}
{% endfor %}
</div>
</div>
